{
    "name": "ghost-theme-moegi",
    "version": "2.0.0",
    "description": "An elegant & fresh ghost theme.",
    "demo": "https://notes.ddiu.site",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public"
    },
    "author": {
        "name": "ddiu8081",
        "email": "i@ddiu.site",
        "url": "https://ddiu.site"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost-theme",
        "theme",
        "ghost"
    ],
    "repository": "https://github.com/moegi-design/ghost-theme-Moegi.git",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^11.0.0",
        "@rollup/plugin-node-resolve": "^7.0.0",
        "rollup": "^1.20.0",
        "rollup-plugin-livereload": "^1.0.0",
        "rollup-plugin-pnp-resolve": "^2.0.0",
        "rollup-plugin-svelte": "^5.0.3",
        "rollup-plugin-terser": "^5.1.2",
        "svelte": "^3.0.0"
    },
    "dependencies": {
        "sirv-cli": "^0.4.4",
        "the-answer": "^1.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "main": "index.js"
}
