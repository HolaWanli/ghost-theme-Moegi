{{!< default}}

{{!-- {{> "site-header"}} --}}

{{#post}}
  <main role="main">
      <article class="{{post_class}}">
        <header class="post-header" style="background-image: linear-gradient(to bottom,rgba(255,255,255,0.88),#ffffff), url({{img_url feature_image}})">
          <div class="header-container">
            <section class="post-meta">
              <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
                {{date format=(t "date-format")}}
              </time>
            </section>
            <h1 class="post-title">{{title}}</h1>
            <section class="post-tags">
              {{tags separator=""}}
            </section>
            {{#if feature_image}}
              <figure class="post-full-image" style="background-image: url({{img_url feature_image}})" />
            {{/if}}
          </div>
        </header>
        <section>
          <div class="container">
            {{content}}
          </div>
        </section>
